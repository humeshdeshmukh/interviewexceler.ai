/* Mobile Responsiveness */
@media (max-width: 768px) {
  .chatWindow {
    position: fixed;
    top: auto;
    left: 1rem;
    right: 1rem;
    bottom: 90px;
    width: calc(100% - 2rem);
    height: 70vh;
    max-height: 650px;
    border-radius: 20px;
  }

  .chatbotContainer {
    bottom: 1rem;
    right: 1rem;
  }

  .message {
    max-width: 95%;
  }

  .messagesContainer {
    padding: 1.25rem;
  }

  .chatHeader {
    padding: 1.25rem 1.5rem;
  }
}